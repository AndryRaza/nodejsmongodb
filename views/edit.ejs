<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Home</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

    <div class="container">
        <h1>Creation</h1>
        <div class="mb-3">
            <label for="lastNAme" class="form-label">Nom</label>
            <input type="text" class="form-control" id="lastName" value=<%= firstName %>>
        </div>
        <div class="mb-3">
            <label for="firstName" class="form-label">Pr√©nom</label>
            <input type="text" class="form-control" id="firstName" value=<%= lastName %> >
        </div>
        <button class="btn btn-primary" onclick="update()">Modifier</button>
    </div>

</body>
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
<script>

    async function update() {

        const id = "624d3408f2439b40ee56356c";

        response = await fetch(`http://localhost:3000/personne/${id}`, {
            method: "PATCH",
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                lastName: document.getElementById('lastName').value,
                firstName: document.getElementById('firstName').value
            })
        })

        console.log(response)
    }

</script>

</html>